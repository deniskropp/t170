{
    "name": "multipersona/php-core",
    "description": "PHP implementation of the MultiPersona system",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-sqlite3": "*",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^3.0",
        "symfony/console": "^6.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "MultiPersona\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MultiPersona\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"copy('vendor/autoload.php', 'autoload.php');\""
        ],
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
